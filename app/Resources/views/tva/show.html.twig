{% extends 'tva/layout.html.twig' %}

{% block content %}
    <h1>Tva</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tva.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ tva.type }}</td>
            </tr>
            <tr>
                <th>Taux</th>
                <td>{{ tva.taux }}</td>
            </tr>
            <tr>
                <th>Datedeb</th>
                <td>{% if tva.dateDeb %}{{ tva.dateDeb|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if tva.dateFin %}{{ tva.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tva_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tva_edit', { 'id': tva.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
